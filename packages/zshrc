    if [ -f "/Users/cloudgenius/miniconda/etc/profile.d/conda.sh" ]; then
        . "/Users/cloudgenius/miniconda/etc/profile.d/conda.sh"
    else
        export PATH="/Users/cloudgenius/miniconda/bin:$PATH"
    fi
fi
